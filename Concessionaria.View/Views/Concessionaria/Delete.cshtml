@model Concessionaria.Model.Models.Concessionaria

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja excluir essa concessionaria?</h3>
<div>
    <h4>Concessionária</h4>
    <hr />
    <form asp-action="Delete">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdConcessionaria)
        </dt>
        <dd class = "col-sm-10">
            @Html.EditorFor(model => model.IdConcessionaria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cnpj)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
    </dl>
    
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-success" asp-action="Index">Voltar a Lista</a>
    </form>
</div>
<script>
    var check = @Html.Raw(Json.Serialize(ViewData["Erro"]));
    if(check){
        Swal.fire({
            icon: 'error',
            title: 'Concessionária ativa!',
            text: 'Concessionária tem veiculos registrados.'
        });
    }
</script>